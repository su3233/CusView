<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp">

    <Button
        android:id="@+id/menu"
        style="@style/MenuStyle"
        android:background="@drawable/baseline_adjust_24" />

    <Button
        android:id="@+id/item1"
        style="@style/MenuItemStyle"
        android:visibility="gone"
        android:background="@drawable/baseline_ac_unit_24" />

    <Button
        android:id="@+id/item2"
        style="@style/MenuItemStyle"
        android:visibility="gone"
        android:background="@drawable/baseline_add_a_photo_24" />

    <Button
        android:id="@+id/item3"
        style="@style/MenuItemStyle"
        android:visibility="gone"
        android:background="@drawable/baseline_add_alarm_24" />

    <Button
        android:id="@+id/item4"
        style="@style/MenuItemStyle"
        android:visibility="gone"
        android:background="@drawable/baseline_add_alert_24" />

    <Button
        android:id="@+id/item5"
        style="@style/MenuItemStyle"
        android:visibility="gone"
        android:background="@drawable/baseline_add_location_alt_24" />
</FrameLayout>