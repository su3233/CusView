<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.capture2_animation.AnimationActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_anim_target"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@android:color/darker_gray" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_scale_anim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="scale动画"
        android:textAllCaps="false" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_translate_anim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="translate动画"
        android:textAllCaps="false" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_roate_anim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="rotate动画"
        android:textAllCaps="false" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_alpha_anim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="alpha动画"
        android:textAllCaps="false" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_set_anim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="set动画"
        android:textAllCaps="false" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_set_anim_scan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="scan动画"
        android:textAllCaps="false" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_play_anim_list"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:src="@drawable/palying_anim" />

    <include
        android:id="@+id/scan_view_all"
        layout="@layout/view_scan_anim" />


</androidx.appcompat.widget.LinearLayoutCompat>